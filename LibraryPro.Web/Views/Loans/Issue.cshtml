@model LibraryPro.Web.Models.Entities.BookLoan

@{
    ViewData["Title"] = "Issue New Book";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-navy text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-journal-plus me-2"></i>New Loan Transaction</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Issue">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Select Member</label>
                            <select asp-for="MemberId" class="form-select select-search" asp-items="ViewBag.Members">
                                <option value="">-- Search by Name or Email --</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Select Book</label>
                            <select asp-for="BookId" class="form-select select-search" asp-items="ViewBag.Books">
                                <option value="">-- Search by Title or ISBN --</option>
                            </select>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="LoanDate" class="form-label fw-bold">Issue Date</label>
                                <input asp-for="LoanDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DueDate" class="form-label fw-bold">Due Date</label>
                                <input asp-for="DueDate" type="date" class="form-control" value="@DateTime.Now.AddDays(14).ToString("yyyy-MM-dd")" />
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold">
                                <i class="bi bi-check2-circle me-1"></i>CONFIRM ISSUE
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select-search').select2({
                theme: 'bootstrap-5',
                width: '100%'
            });
        });
    </script>
}

<style>
    .bg-navy {
        background-color: #1a237e;
    }
</style>