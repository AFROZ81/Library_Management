@model IEnumerable<LibraryPro.Web.Models.Entities.BookLoan>

<div class="container py-5 animate-fade-in">
    <div class="row align-items-end mb-4">
        <div class="col-lg-6">
            <h2 class="fw-bold text-dark mb-1"><i class="bi bi-arrow-left-right text-primary me-2"></i>Loan Operations</h2>
            <p class="text-muted mb-0">Manage circulation, track overdues, and handle returns.</p>
        </div>
        <div class="col-lg-6 text-lg-end mt-3">
            <div class="d-inline-flex gap-2">
                <div class="input-group shadow-sm" style="width: 300px;">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" id="loanSearch" class="form-control border-start-0" placeholder="Search book or member...">
                </div>
                <a asp-action="Issue" class="btn btn-primary fw-bold px-4 shadow-sm rounded-pill">
                    <i class="bi bi-plus-lg me-2"></i>Issue Book
                </a>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        @{
            var activeCount = Model.Count(l => !l.IsReturned);
            var overdueCount = Model.Count(l => !l.IsReturned && l.DueDate < DateTime.Now);
            var returnRate = Model.Any() ? (Model.Count(l => l.IsReturned) * 100 / Model.Count()) : 0;
        }
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-primary-soft text-primary me-3"><i class="bi bi-journal-bookmark"></i></div>
                    <div>
                        <h4 class="mb-0 fw-bold">@activeCount</h4>
                        <small class="text-muted">Currently Out</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-danger-soft text-danger me-3"><i class="bi bi-exclamation-octagon"></i></div>
                    <div>
                        <h4 class="mb-0 fw-bold">@overdueCount</h4>
                        <small class="text-muted">Overdue Items</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-success-soft text-success me-3"><i class="bi bi-graph-up-arrow"></i></div>
                    <div>
                        <h4 class="mb-0 fw-bold">@returnRate%</h4>
                        <small class="text-muted">Return Rate</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-warning-soft text-warning me-3"><i class="bi bi-currency-rupee"></i></div>
                    <div>
                        <h4 class="mb-0 fw-bold">₹@Model.Where(l => !l.IsReturned).Sum(l => l.CalculateLateFee).ToString("N0")</h4>
                        <small class="text-muted">Uncollected Fines</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom-0">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="fw-bold mb-0 text-uppercase small text-muted">Transaction Registry</h6>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle rounded-pill" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-filter me-1"></i> Filter Status
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">All Transactions</a></li>
                        <li><a class="dropdown-item text-danger" href="#">Only Overdue</a></li>
                        <li><a class="dropdown-item text-success" href="#">Only Returned</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="loansTable">
                <thead class="bg-light border-top">
                    <tr class="text-muted small">
                        <th class="ps-4">Item Information</th>
                        <th>Member Details</th>
                        <th>Timeline</th>
                        <th>Financials</th>
                        <th>Status</th>
                        <th class="text-center">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loan in Model)
                    {
                        var isOverdue = loan.CalculateLateFee > 0 && !loan.IsReturned;
                        var daysRemaining = (loan.DueDate - DateTime.Now).Days;

                        <tr class="loan-row">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="book-cover-sm me-3">
                                        <i class="bi bi-book text-muted"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@loan.Book.Title</div>
                                        <div class="text-muted x-small">ISBN: @loan.Book.ISBN</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="fw-medium">@loan.Member.Name</div>
                                <div class="text-muted x-small">ID: #@loan.Member.Id.ToString("D4")</div>
                            </td>
                            <td>
                                <div class="small @(isOverdue ? "text-danger fw-bold" : "text-dark")">
                                    @loan.DueDate.ToString("MMM dd")
                                </div>
                                @if (!loan.IsReturned)
                                {
                                    <div class="x-small @(isOverdue ? "text-danger" : "text-muted")">
                                        @(isOverdue ? $"{Math.Abs(daysRemaining)} days late" : $"{daysRemaining} days left")
                                    </div>
                                }
                            </td>
                            <td>
                                @if (loan.CalculateLateFee > 0)
                                {
                                    <div class="text-danger fw-bold">₹@loan.CalculateLateFee.ToString("N0")</div>
                                }
                                else
                                {
                                    <span class="text-muted x-small">--</span>
                                }
                            </td>
                            <td>
                                @if (loan.IsReturned)
                                {
                                    <span class="badge bg-success-soft text-success border border-success border-opacity-25 rounded-pill">Settled</span>
                                }
                                else
                                {
                                    <span class="badge @(isOverdue ? "bg-danger" : "bg-primary") rounded-pill">@(isOverdue ? "Overdue" : "Active")</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <button class="btn btn-light btn-sm rounded-circle" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu shadow border-0">
                                        @if (!loan.IsReturned)
                                        {
                                            <li>
                                                <form asp-action="Return" method="post">
                                                    <input type="hidden" name="loanId" value="@loan.Id" />
                                                    <button type="submit" class="dropdown-item text-primary"><i class="bi bi-arrow-return-left me-2"></i>Mark Returned</button>
                                                </form>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="mailto:@loan.Member.Email"><i class="bi bi-bell me-2"></i>Send Reminder</a></li>
                                        }
                                        <li><a class="dropdown-item" asp-controller="Members" asp-action="Details" asp-route-id="@loan.Member.Id"><i class="bi bi-person me-2"></i>View Member</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .x-small {
        font-size: 0.75rem;
    }

    .bg-primary-soft {
        background-color: #eef2ff;
    }

    .bg-danger-soft {
        background-color: #fff1f2;
    }

    .bg-success-soft {
        background-color: #f0fdf4;
    }

    .bg-warning-soft {
        background-color: #fffbeb;
    }

    .stats-icon {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .book-cover-sm {
        width: 35px;
        height: 45px;
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .loan-row {
        transition: all 0.2s;
    }

        .loan-row:hover {
            background-color: #fcfcfd;
        }

    .dropdown-item {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
</style>

<script>
    // Live Search Logic
    document.getElementById('loanSearch').addEventListener('keyup', function() {
        let val = this.value.toLowerCase();
        let rows = document.querySelectorAll('#loansTable tbody tr');
        rows.forEach(row => {
            row.style.display = row.innerText.toLowerCase().includes(val) ? '' : 'none';
        });
    });
</script>