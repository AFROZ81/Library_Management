@model LibraryPro.Web.Models.MemberProfileViewModel

<div class="container py-5 animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Patrons</a></li>
                <li class="breadcrumb-item active">@Model.Name</li>
            </ol>
        </nav>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-dark rounded-pill px-3 shadow-sm" onclick="window.print()">
                <i class="bi bi-printer me-2"></i>Print Statement
            </button>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm text-center p-4 mb-4">
                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3 mx-auto shadow-sm" style="width: 80px; height: 80px; font-size: 2rem; background: linear-gradient(135deg, #1a237e 0%, #3949ab 100%);">
                    @Model.Name[0]
                </div>
                <h4 class="fw-bold mb-1">@Model.Name</h4>
                <p class="text-muted small">@Model.Email</p>

                <hr class="my-4 opacity-50">

                <div class="p-3 mb-3 @(Model.TotalUnpaidFine > 0 ? "bg-danger-soft" : "bg-success-soft") rounded-3 transition-lift">
                    <small class="text-uppercase fw-bold text-muted d-block mb-1">Outstanding Balance</small>
                    <h3 class="@(Model.TotalUnpaidFine > 0 ? "text-danger" : "text-success") fw-bold mb-0">
                        ₹@Model.TotalUnpaidFine.ToString("N2")
                    </h3>
                </div>

                @if (Model.TotalUnpaidFine > 0)
                {
                    <form asp-action="PayFine" method="post">
                        <input type="hidden" name="memberId" value="@Model.MemberId" />
                        <button type="submit" class="btn btn-success w-100 rounded-pill shadow-sm fw-bold">
                            <i class="bi bi-cash-stack me-2"></i>Settle All Fines
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-light w-100 rounded-pill disabled text-muted">
                        <i class="bi bi-check-circle-fill me-2 text-success"></i>Account Clear
                    </button>
                }

                <a asp-action="Edit" asp-route-id="@Model.MemberId" class="btn btn-outline-secondary btn-sm w-100 rounded-pill mt-3">
                    <i class="bi bi-pencil me-1"></i> Edit Profile
                </a>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold mb-0"><i class="bi bi-book-half me-2 text-primary"></i>Currently Borrowed</h5>
                <span class="badge rounded-pill bg-primary">@Model.ActiveLoans.Count Active</span>
            </div>

            @if (!Model.ActiveLoans.Any())
            {
                <div class="card border-0 shadow-sm p-5 text-center bg-white mb-4">
                    <i class="bi bi-journal-check fs-1 text-muted opacity-25"></i>
                    <p class="text-muted mt-2 mb-0">No active loans found for this member.</p>
                </div>
            }
            else
            {
                <div class="row g-3 mb-4">
                    @foreach (var loan in Model.ActiveLoans)
                    {
                        <div class="col-12">
                            <div class="card border-0 shadow-sm transition-lift">
                                <div class="card-body p-3 d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary-soft p-3 rounded-3 me-3">
                                            <i class="bi bi-book text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold mb-0">@loan.Book.Title</h6>
                                            <small class="@(loan.DueDate < DateTime.Now ? "text-danger fw-bold" : "text-muted")">
                                                <i class="bi bi-calendar-event me-1"></i>
                                                Due: @loan.DueDate.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center gap-3">
                                        @if (loan.CalculateLateFee > 0)
                                        {
                                            <span class="badge bg-danger">Fine: ₹@loan.CalculateLateFee.ToString("N0")</span>
                                        }
                                        <form asp-controller="Loans" asp-action="Return" method="post" class="mb-0">
                                            <input type="hidden" name="loanId" value="@loan.Id" />
                                            <button type="submit" class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm">
                                                Process Return
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="fw-bold mb-0"><i class="bi bi-clock-history me-2 text-muted"></i>Recent Return History</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted small uppercase">
                            <tr>
                                <th class="ps-4 border-0">Book Title</th>
                                <th class="border-0">Issue Date</th>
                                <th class="border-0">Returned On</th>
                                <th class="border-0 text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var history in Model.PastHistory.Take(5))
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@history.Book.Title</td>
                                    <td class="small">@history.LoanDate.ToString("d")</td>
                                    <td class="small">@history.ReturnDate?.ToString("d")</td>
                                    <td class="text-center">
                                        <span class="badge bg-success-soft text-success rounded-pill px-2">Completed</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (!Model.PastHistory.Any())
                {
                    <div class="text-center py-4">
                        <small class="text-muted">No history found.</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>