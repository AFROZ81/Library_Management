@model LibraryPro.Web.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid px-4 py-3 animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Library Insights</h2>
            <p class="text-muted small">Real-time system health and patron activity.</p>
        </div>
        <div class="text-end">
            <span class="badge bg-white text-dark border p-2">
                <i class="bi bi-clock-history me-1 text-primary"></i> Last Sync: @DateTime.Now.ToString("t")
            </span>
        </div>
    </div>

    <div class="row g-3 mb-4">
        @{
            var stats = new[] {
                new { Title = "Total Books", Value = Model.TotalBooks.ToString(), Icon = "bi-book", Color = "primary" },
                new { Title = "Active Patrons", Value = Model.TotalMembers.ToString(), Icon = "bi-people", Color = "success" },
                new { Title = "Live Loans", Value = Model.ActiveLoans.ToString(), Icon = "bi-arrow-repeat", Color = "warning" },
                new { Title = "Unpaid Fines", Value = "₹" + Model.TotalPendingFines.ToString("N0"), Icon = "bi-currency-rupee", Color = "danger" }
                };
        }
        @foreach (var item in stats)
        {
            <div class="col-md-3">
                <div class="card border-0 shadow-sm p-3 transition-lift h-100">
                    <div class="d-flex align-items-center">
                        <div class="rounded-3 bg-@item.Color-soft p-3 me-3">
                            <i class="bi @item.Icon text-@item.Color fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0 small fw-bold text-uppercase">@item.Title</h6>
                            <h3 class="mb-0 fw-bold">@item.Value</h3>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="fw-bold mb-0">Borrowing Trends (Last 7 Days)</h6>
                    <button class="btn btn-sm btn-light border">Weekly</button>
                </div>
                <div style="position: relative; height:320px; width:100%">
                    <canvas id="loanChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm p-4 h-100">
                <h6 class="fw-bold mb-4">Inventory Health</h6>
                <div class="text-center py-3">
                    <div class="progress mb-3" style="height: 12px; border-radius: 10px;">
                        <div class="progress-bar bg-primary" style="width: @Model.AvailabilityRate%"></div>
                    </div>
                    <h4 class="fw-bold mb-0">@Model.AvailabilityRate.ToString("F1")%</h4>
                    <p class="text-muted small">Books currently available</p>
                </div>
                <hr>
                <div class="mt-2">
                    <p class="small text-muted mb-3 text-uppercase fw-bold" style="font-size: 0.7rem;">Popular Genres</p>
                    <div style="position: relative; height:200px;">
                        <canvas id="genreChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="fw-bold mb-0">Critical Overdue Alerts</h6>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0 small">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Member</th>
                                <th>Book Title</th>
                                <th>Due Date</th>
                                <th class="text-end pe-4">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loan in Model.CriticalOverdueLoans)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@loan.Member.Name</td>
                                    <td>@loan.Book.Title</td>
                                    <td><span class="text-danger">@loan.DueDate.ToString("MMM dd")</span></td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-outline-danger rounded-pill px-3">Notify</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm h-100 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="fw-bold mb-0">Top Borrowers</h6>
                    <span class="badge bg-soft-warning text-warning rounded-pill px-3">All Time</span>
                </div>
                <div class="list-group list-group-flush">
                    @if (Model.TopBorrowers != null && Model.TopBorrowers.Any())
                    {
                        foreach (var borrower in Model.TopBorrowers)
                        {
                            <div class="list-group-item px-0 border-0 d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center fw-bold"
                                         style="width:38px; height:38px; font-size: 0.8rem;">
                                        @(string.IsNullOrEmpty(borrower.MemberName) ? "???" : borrower.MemberName.Substring(0, Math.Min(2, borrower.MemberName.Length)).ToUpper())
                                    </div>
                                    <div>
                                        <p class="mb-0 fw-bold small">@borrower.MemberName</p>
                                        <span class="text-muted" style="font-size: 0.7rem;">@borrower.MemberEmail</span>
                                    </div>
                                </div>
                                <span class="badge rounded-pill bg-light text-primary border border-primary-subtle">
                                    @borrower.LoanCount Books
                                </span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-person-dash text-muted fs-1"></i>
                            <p class="text-muted small mt-2">No borrowing history available yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const chartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } }
        };

        // Loan Chart Fix
        new Chart(document.getElementById('loanChart'), {
            type: 'line',
            data: {
                labels: @Json.Serialize(Model.WeeklyLabels),
                datasets: [{
                    data: @Json.Serialize(Model.WeeklyIssueCounts),
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.05)',
                    fill: true,
                    tension: 0.4,
                    pointRadius: 5,
                    pointHoverRadius: 8
                }]
            },
            options: {
                ...chartOptions,
                scales: {
                    y: { beginAtZero: true, suggestedMax: 5, ticks: { stepSize: 1 } },
                    x: { grid: { display: false } }
                }
            }
        });

        // Genre Chart Fix
                // Genre Chart Fix
        new Chart(document.getElementById('genreChart'), {
            type: 'doughnut',
            data: {
                labels: @Json.Serialize(Model.GenreLabels),
                datasets: [{
                    data: @Json.Serialize(Model.GenreCounts),
                    // Expanded palette to prevent color repetition
                    backgroundColor: [
                        '#0d6efd', // Blue
                        '#ffc107', // Yellow
                        '#198754', // Green
                        '#dc3545', // Red
                        '#6610f2', // Indigo
                        '#fd7e14', // Orange
                        '#20c997', // Teal
                        '#0dcaf0'  // Cyan
                    ],
                    borderWidth: 2,
                    borderColor: '#ffffff'
                }]
            },
            options: {
                ...chartOptions,
                cutout: '75%',
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            padding: 15,
                            font: { size: 11 }
                        }
                    }
                }
            }
        });
    </script>
}

<style>
    .bg-primary-soft {
        background: #e7f1ff;
    }

    .bg-success-soft {
        background: #e6f4ea;
    }

    .bg-warning-soft {
        background: #fff8e1;
    }

    .bg-danger-soft {
        background: #fce8e8;
    }

    .extra-small {
        font-size: 0.75rem;
    }

    .transition-lift:hover {
        transform: translateY(-3px);
        transition: 0.2s;
    }
</style>