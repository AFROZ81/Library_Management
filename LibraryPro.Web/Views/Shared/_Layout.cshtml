<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryPro</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        :root {
            --primary-navy: #1a237e;
            --accent-yellow: #ffc107;
            --glass-bg: rgba(26, 35, 126, 0.92);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f9;
            padding-top: 85px;
            display: flex;
            flex-direction: column; /* Stacks header, main, and footer vertically */
            transition: all 0.3s ease;
        }

        /* --- Professional Fixed Navbar --- */
        .navbar {
            background: var(--glass-bg) !important;
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            padding: 0.7rem 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.4rem;
            letter-spacing: -0.5px;
            color: #fff !important;
            display: flex;
            align-items: center;
        }

        .brand-icon {
            background: var(--accent-yellow);
            color: var(--primary-navy);
            width: 35px;
            height: 35px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        /* --- Modern Active State logic --- */
        .nav-link {
            color: rgba(255,255,255,0.75) !important;
            font-weight: 500;
            font-size: 0.95rem;
            margin: 0 8px;
            padding: 0.5rem 0 !important;
            position: relative;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: #fff !important;
                transform: translateY(-1px);
            }

            /* Active Page Indicator (Yellow Glow Underline) */
            .nav-link.active {
                color: #fff !important;
            }

                .nav-link.active::after {
                    content: "";
                    position: absolute;
                    bottom: -5px;
                    left: 0;
                    width: 100%;
                    height: 3px;
                    background: var(--accent-yellow);
                    border-radius: 10px;
                    box-shadow: 0 0 10px rgba(255, 193, 7, 0.6);
                }

        /* --- Issue Book CTA Button --- */
        .btn-issue {
            background-color: var(--accent-yellow) !important;
            color: var(--primary-navy) !important;
            font-weight: 700 !important;
            border: none;
            border-radius: 8px !important;
            padding: 0.6rem 1.2rem !important;
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
            transition: all 0.2s ease-in-out !important;
        }

            .btn-issue:hover {
                transform: translateY(-2px) scale(1.02);
                box-shadow: 0 6px 15px rgba(255, 193, 7, 0.4);
                background-color: #ffca2c !important;
            }

        /* --- Footer & Container --- */
        .main-container {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0; /* Ensures the footer doesn't get squashed */
            background: #fff;
            padding: 30px 0;
            border-top: 1px solid #e9ecef;
            font-size: 0.9rem;
        }

        .footer-brand {
            color: var(--primary-navy);
            font-weight: 700;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="brand-icon">
                        <i class="bi bi-book-half"></i>
                    </div>
                    <span>LIBRARY<span class="text-warning">PRO</span></span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse justify-content-end" id="navbarContent">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Books" ? "active" : "")"
                               asp-controller="Books" asp-action="Index">Catalog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Members" ? "active" : "")"
                               asp-controller="Members" asp-action="Index">Members</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Loans" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                               asp-controller="Loans" asp-action="Index">Active Loans</a>
                        </li>
                        <li class="nav-item ms-md-3 mt-2 mt-md-0">
                            <a class="nav-link btn-issue text-dark" asp-controller="Loans" asp-action="Issue">
                                <i class="bi bi-plus-circle-fill me-1"></i>ISSUE BOOK
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted mt-5">
        <div class="container text-center">
            <p class="mb-1">&copy; 2026 - <span class="footer-brand">LibraryPro</span> Management System</p>
            <p class="small mb-0">Designed for Excellence | <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-primary">Privacy Policy</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>